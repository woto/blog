<% @posts.each do |post| %>
  <b><%=h post.title %></b><br />
    <%= post.body %> <br />
    <%= l(post.date, :format => :long) %> <br />
    <% unless post.user.nil? %>
      <%= post.user.login %> <br />
    <% end %>
    <%= post.tag_list %></td> <br />
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
<% end %>

<br />

<div class="tags">
  <%= render(:partial => "tags", :collection => @tags) %>
</div>

<br />

<%= link_to 'New post', new_post_path %>

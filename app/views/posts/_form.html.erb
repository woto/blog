<% if params[:commit] == 'Предпросмотр' %>
  <%= render(:partial => 'preview') %>
<% end %>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <%= f.label :title %><br />
  <%= f.text_field :title, :maxlength => 255, :size => 50%><br />

  <a id="toggle_post_intro_input" class="ajax" href=""></a><br />

  <%= f.label :intro %><br />
  <%= f.cktext_area :intro, :language => "ru" %><br />

  <%= f.label :body %><br />
  <%= f.cktext_area :body, :language => "ru" %><br />

  <%= f.check_box :visible %> 
  <%= f.label :visible %><br /><br />

  <%= f.text_field :date, :format => "%d.%m.%Y %H:%M" %>
  <%= f.image_tag('calendar.gif') %><br /><br />

  <%= render :partial => 'categories/render_categories', :object => @post %><br />

  <%= f.label :tag_list %><br />
  <%= f.text_area :tag_list, :autocomplete =>"off", :rows => 2 %><br /><br />

  <%= f.submit "Предпросмотр" %>
  <%= f.submit %>

<% end %>

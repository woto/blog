<% semantic_fields_for "post[category_attributes]", @post.category, :category do |f| %>
  <% f.inputs :id => 'category' do %>
    <%= f.input :parent, :as => :select, :collection => nested_set_options(Category) {|i| "#{'-' * i.level} #{i.name}" } %>
    <%= f.input :name %>
    <%=link_to_remote "Выбрать имеющуюся категорию", :class => "ajax", :url => {:action => "available_category"} %>
    <br /><br />
  <% end %>
<% end %>

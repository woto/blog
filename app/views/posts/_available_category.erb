<% semantic_fields_for @post do |f| %>
  <% f.inputs :id => 'category' do %>
    <%= link_to_remote ("Создать новую категорию", {:url => {:action => "new_category"}}, {:class => "ajax"}) %>
    <br /><br />
    <%= f.input :category_id, :as => :select, :collection => nested_set_options(Category) {|i| "#{'-' * i.level} #{i.name}" } %>
  <% end %>
<% end %>

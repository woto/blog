            <li><a href="">+</a> <a href="">Google Reader</a> <a href="">→</a></li>
          </ul>
 			</div>
			
      <div id="columnC_3columns">

        <h4><span>Категории</span></h4>
        <%=format_nested_set(Category.roots, {:major => {:tag => "ul", :class => "links"}}){|i| "<a href=''>" + i.name + '</a>'} %>

       <h4><span>Популярные</span> теги</h4>

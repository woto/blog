- form_for(@comment) do |f|
  = f.error_messages
  = f.hidden_field :post_id
  = f.hidden_field :parent_id
  %p
    = f.label :body
    %br/
    = f.text_area :body
  %p
    = f.label :captcha
    %br/
    = f.captcha_challenge 
    %br/
    = f.captcha_field
    -# %br/
    -# = f.regenerate_captcha_challenge_link :text => 'Another captcha, please'
  %p
    = f.submit
